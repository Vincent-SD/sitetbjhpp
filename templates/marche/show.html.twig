{% extends 'base.html.twig' %}
{% block title %}March√©s{% endblock %}

{% block body %}
    <div id="nomMarche">
        <h1 class="text-lg-center">{{ marche.name }}</h1>
        <h3 class="blockquote">{{ marche.description }}</h3>
    </div>

    <ul class="produitsDuMarche">
        {% for produit in produits %}
            <div class="le-produit mb-4" >
                {{ produit }}
                <img src="{{ asset(produit.getImage()) }}" class="image">
                <span style="margin-left: 5em">{{ produit.type }}</span>
            </div>
        {% endfor %}
    </ul>
{% endblock %}