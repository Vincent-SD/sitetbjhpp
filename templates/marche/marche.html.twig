{% extends 'base.html.twig' %}

{% block title %}Hello MarcheController!{% endblock %}

{% block body %}
    <style>
        body {
            color:black;
            background-color:white;
            background-image:url({{ asset('img/marchedegeralt.jpg') }});
            background-attachment:fixed;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <div style="margin-top: 13em"></div>
    <div class="col-6 offset-3">
        <div class="card mt-5 text-center" id="card-marche">
            <h1> Accéder aux marchés </h1>
            <p>Voici la liste de tous les marchés disponibles</p>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
        <div class="text-center">
            <a href="{{ path('marche_create') }}" style="font-size: 25px; background-color: #b21f2d; border-color: black"
               class="btn btn-primary btn-lg active mt-2" role="button" aria-pressed="true">Créer un marché
            </a>
            <a href="{{ path('produit_create') }}" style="font-size: 25px; background-color: #b21f2d; border-color: black"
               class="btn btn-primary btn-lg active mt-2" role="button" aria-pressed="true">Créer un produit
            </a>
        </div>
        {% endif %}

    </div>
    {% for marche in marches %}
        <div class="col-6 offset-3">
            <a class="lien-marche" href={{ path('marche_show', { 'id': marche.id } ) }} >
                <div class="card mt-3 text-center" id="card-list-marche">
                    {{ marche }}
                    <p class="mt-n2" style="font-size: 0.4em"> {{ marche.description }}</p>
                </div>
            </a>
        </div>
    {% endfor %}




{% endblock %}
