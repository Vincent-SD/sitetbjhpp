{% extends 'base.html.twig' %}

{% block title %}Hello MarcheController!{% endblock %}

{% block body %}
    <style>
        body {
            color:black;
            background-color:white;
            background-image:url({{ asset('img/marchedegeralt.jpg') }});
            background-attachment:fixed;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <div style="margin-top: 13em"></div>
<div class="col-6 offset-3">
    <div class="card mt-5 text-center">
        <h1> Accéder aux marchés </h1>
        <p>Voici la liste de tous les marchés disponibles</p>
    </div>
    <div class="text-center">
    <a href="{{ path('marche_create') }}" style="font-size: 25px; background-color: forestgreen; border-color: forestgreen"
    class="btn btn-primary btn-lg active mt-2" role="button" aria-pressed="true">Créer un marché
    </a>
    </div>
</div>
    {% for marche in marches %}
        <div class="col-6 offset-3">
            <div class="card mt-3 text-center">
                <a style="font-size: 3em" href={{ path('marche_show', { 'id': marche.id } ) }} >{{ marche }} </a>
                <p class="mt-n2"> {{ marche.description }}</p>
            </div>
        </div>
    {% endfor %}




{% endblock %}
