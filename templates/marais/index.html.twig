{% extends 'base.html.twig' %}

{% block title %}Hello Marais!{% endblock %}

{% block body %}
    <style>
        body {
            color:black;
            background-color:white;
            background-image:url({{ asset('img/geralt_de_la_rive.jpg') }});
            background-attachment:fixed;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <div class="col-6 offset-3">
        <div class="card mt-5 text-center"
             style="box-shadow: -1px 2px 2px black;
             background-color: tomato; font-size: 3em; color:black">
            <h1> Accéder aux marais </h1>
            <p style="font-size: 0.4em">Accéder à un marais permet d'y trouver tous ses marchés</p>
        </div>
    </div>
    {% for marais in maraiss %}
        <div class="col-6 offset-3">
            <a class="lien-marais" href={{ path('marais_show', { 'id': marais.id } ) }} >
            <div class="card mt-3 text-center"
                 style="box-shadow: -1px 2px 2px black; font-size: 3em;
                        background-color: forestgreen; color:black">
                {{ marais }}
            </div>
            </a>
        </div>
    {% endfor %}
{% endblock %}
