{% extends 'base.html.twig' %}

{% block title %}Phare index{% endblock %}


{% block body %}
    <br>
    <h1 class="mb-4">Liste des Phares</h1>

    <div class="mb-3">
        <a href="{{ path('phare_new') }}" class="btn btn-success">‚ûï Ajouter un phare</a>
    </div>

    {% if phares is empty %}
        <div class="alert alert-warning">Aucun phare trouv√©.</div>
    {% else %}
        <div class="row">
            {% for phare in phares %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        {% if phare.image %}
                            <img src="{{ asset(phare.image) }}" class="card-img-top" alt="Image de {{ phare.name }}" style="max-height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ phare.name }}</h5>
                            <p class="card-text text-muted">{{ phare.description|length > 130 ? phare.description|slice(0, 130) ~ '...' : phare.description }}</p>
                            <ul class="list-unstyled mb-3">
                                <li><strong>Longitude :</strong> {{ phare.longitude }}</li>
                                <li><strong>Latitude :</strong> {{ phare.latitude }}</li>
                                <li><strong>P√©riode :</strong> {{ phare.period }}</li>
                            </ul>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('phare_show', {'id': phare.id}) }}" class="btn btn-outline-primary btn-sm">üëÅ Voir</a>
                                <a href="{{ path('phare_edit', {'id': phare.id}) }}" class="btn btn-outline-secondary btn-sm">‚úè Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
