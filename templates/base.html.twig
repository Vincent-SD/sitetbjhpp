                    {% elseif is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN')%}
                        probability = 20;
                    {% else %}
                        probability = 60;
                    {% endif %}
                    if(recursive_cookie_chance <= probability) {
                        setTimeout(() => {
                            $('#cookiemodal').modal({backdrop: 'static', keyboard: false}, 'show');
                        }, 500);
                    }
                });
            });
        }) ();
    </script>
