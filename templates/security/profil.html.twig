{% extends 'base.html.twig' %}

{% block title %}Votre Profil{% endblock %}

{% block body %}
<div class="container bottom-padding" style="background-color:white; margin-top: 8em">
    <div class="row">
        <div class="col-sm-12 text-center"><h1>{{app.user.name}}</h1></div>
        <div style="font-size: 1.2em" class="col-sm-12 text-center"><span>{{app.user.role}}</span></div>
        <div style="font-size: 1.2em" class="col-sm-12 text-center"><span>{{app.user.email}}</span></div>
        <div style="font-size: 1.2em" class="col-sm-12 text-center"><span>{{app.user.username}}</span></div>
    </div>
</div>

{% endblock %}